{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug hyperFEM App - Parse Only (hyperFEM)",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/hyperFEM_app.exe",
            "args": [
                "--input-file",
                "case/node.xfem"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "${workspaceFolder}/vcpkg_installed/x64-mingw-dynamic/debug/bin;D:/Programs/mingw64/bin;${env:PATH}"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "",
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
